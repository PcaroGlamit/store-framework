{
  "store.product": {
    "children": [
      "flex-layout.row#main"
    ],
    "props": { 
      "marginTop": 6
    }
  },
  "flex-layout.row#main":{
    "children":[
      "flex-layout.row#left",
      "flex-layout.row#right"
    ]
  },
  "flex-layout.row#left":{
    "children":[
      "product-images"
    ]
  },
  "flex-layout.row#right":{
    "children":[
      "flex-layout.col#data"
    ],
    "props":{
      "verticalAlign": "middle",
      "preventVerticalStretch":true
    }
  },
  "flex-layout.col#data":{
    "children":[
      "product-name",
      "product-price",
      "buy-button"
    ]
  },
  "product-price":{
    "props":{
      "showSavings": true,
      "showListPrice": true
    }
  }
}